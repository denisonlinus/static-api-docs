          "responses": {
            "200": {
              "description": "An object with a \"success\" property",
              "schema": {
                "type" : "object",
                "properties" : {
                  "success" : {
                    "type": "boolean",
                    "description" : "\"true\" for successful delete."
                  }
                }

              }
            },
            "500": {
              "description": "Unexpected error",
              "schema": {
                "$ref": "#/definitions/Error"
              }
            }
          }
